<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nithin.locations.MilegeActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText1"
            android:hint="Initial odometer reading"
            android:layout_weight="0.16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:hint="Current odometer reading" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="Fuel in ltr&apos;s"
        android:clickable="false"
        android:layout_marginBottom="2dp"
        android:textSize="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toStartOf="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_alignRight="@+id/btnSubmit1"
        android:layout_alignEnd="@+id/btnSubmit1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:background="#e7840c"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MILEAGE:"
        android:id="@+id/textView1"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TOTAL COST:"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/dd1"
        android:alpha="0.5"
        android:layout_weight="0.65"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="427dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btnSubmit1"
        android:background="#138fab"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/btnSubmit2"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        android:id="@+id/btnSubmit2"
        android:background="#138fab"
        android:textColor="@android:color/black"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText5"
        android:textSize="15dp"
        android:hint="calculated mileage"
        android:clickable="false"
        android:background="#ffffff"
        android:layout_alignLeft="@+id/btnSubmit1"
        android:layout_alignStart="@+id/btnSubmit1"
        android:layout_toLeftOf="@+id/btnSubmit2"
        android:layout_toStartOf="@+id/btnSubmit2"
        android:layout_above="@+id/btnSubmit1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="Cost of fuel/ltr"
        android:layout_weight="0.16"
        android:textSize="15dp"
        android:layout_alignTop="@+id/editText3"
        android:layout_toEndOf="@+id/editText5"
        android:layout_toRightOf="@+id/editText5" />


</RelativeLayout>
